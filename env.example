# Telegram Bot Token
# Получите токен от @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Payment Provider Token (от BotFather для Telegram Payments)
# Получите от @BotFather после настройки платежей
# Оставьте пустым, если используете только ЮKassa API
PROVIDER_TOKEN=your_provider_token_here

# ЮKassa API (для поддержки СБП)
# Получите в личном кабинете ЮKassa: https://yookassa.ru/
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here

# Webhook для ЮKassa (опционально)
# Включите webhook сервер для мгновенной обработки платежей
# Требуется публичный HTTPS URL
YOOKASSA_WEBHOOK_ENABLED=false
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
# Секретный ключ для проверки подписи webhook (опционально, но рекомендуется)
# Получите в личном кабинете ЮKassa в настройках HTTP-уведомлений
YOOKASSA_WEBHOOK_SECRET=your_webhook_secret_key_here


